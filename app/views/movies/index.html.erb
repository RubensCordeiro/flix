<section class="container max-w-[85%]">
  <ul class="flex flex-col gap-y-[16px]">
    <% @movies.each do |movie| %>
      <li class="flex items-center justify-between border-solid border-2 border-zinc-100 rounded-md h-[132px] px-[16px] shadow-md">
        <div class="">
          <p><strong> <%= movie.title %> </strong></p>
          <p>Released on: <%= release_date(movie) %></p>
          <p>Summary: <%= truncate(movie.description, length: 10, separator: '') %></p>
        </div>
        <div class="w-[64px] text-center border-solid border-b border-t border-zinc-300 py-[2px]"><%= gross_amount(movie) %></div>
      </li>
    <% end %>
</ul>
</section>